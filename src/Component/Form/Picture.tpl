<input class="sy-picture-input-hidden" type="hidden" name="{NAME}" value="{VALUE}" />
<button class="btn btn-{COLOR} btn-{SIZE} {CLASS}" onclick="this.nextElementSibling.click();return false" title="{TITLE}" data-bs-title="{TITLE}" data-bs-trigger="hover" data-bs-container="body">{ICON} {LABEL}</button>
<input type="file" class="sy-picture-input-file" style="display:none" onclick="this.value=null" accept="image/*" {REQUIRED} {MULTIPLE} data-caption-placeholder="{'Add a caption'}" data-alert-image="{'Selected file is not an image'}" data-alert-dimension="{'Picture is too small'}" data-alert-count="{'Maximum picture reached'}" data-img-max-count="{IMG_MAX_COUNT}" data-img-min-width="{IMG_MIN_WIDTH}" data-img-max-width="{IMG_MAX_WIDTH}" data-img-min-height="{IMG_MIN_HEIGHT}" data-img-max-height="{IMG_MAX_HEIGHT}" data-img-quality="{IMG_QUALITY}" />
<div class="sy-picture-loader" style="display:none;text-align:center"><div class="spinner-border" role="status"></div></div>
<div class="sy-picture-div" style="text-align:center"></div>